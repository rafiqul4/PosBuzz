{
  "extends": "../backend/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": "../",
    "paths": {
      "@/*": ["backend/src/*"]
    }
  },
  "include": [
    "index.ts",
    "../backend/src/**/*"
  ]
}